{
    "name": "recorder",
    "displayName": "Recorder",
    "version": "0.0.1",
    "description": "recorder",
    "author": "seemr",
    "scripts": {
        "dev": "plasmo dev",
        "build": "plasmo build",
        "package": "plasmo package"
    },
    "dependencies": {
        "@iconify/react": "^4.1.1",
        "plasmo": "0.84.0",
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "4.1.1",
        "@types/chrome": "0.0.251",
        "@types/node": "20.9.0",
        "@types/react": "18.2.37",
        "@types/react-dom": "18.2.15",
        "autoprefixer": "^10.4.16",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.3.5",
        "typescript": "5.2.2"
    },
    "manifest": {
        "host_permissions": [
            "*://*/*"
        ],
        "permissions": [
            "tabs",
            "activeTab",
            "storage",
            "tabCapture"
        ],
        "web_accessible_resources": [
            {
                "matches": [
                    "<all_urls>"
                ],
                "resources": [
                    "tabs/*.html"
                ]
            }
        ]
    },
    "engines": {
        "node": ">=18 <21"
    }
}
